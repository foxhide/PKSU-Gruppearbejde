@model CalendarApplication.Models.Maintenance.ManageEventTypeModel

@{
    ViewBag.Title = "Manage Event Types";
}

<script src="@Url.Content("~/Scripts/maintenance.js")" type="text/javascript"></script>

<h2>Manage Event Types</h2>

<style type="text/css">
    .custom-select {
        width:200px
    }
    .custom-select option {
        width:190px
    }

    .no-pad-table {
        margin-left:0;
        margin-right:auto;
        margin-top:0;
        border-collapse:collapse;
    }
    .no-pad-table td {
        padding:2px;
        padding-right:5px;
    }
</style>

<h3>Event types currently in use (active)</h3>
<table class="no-pad-table">
    <tr>
        <td rowspan="3">
            <select id="act" class="custom-select" size="6">
                @foreach(SelectListItem et in Model.ActiveEventTypes)
                {
                    <option value="@et.Value">@et.Text</option>
                }
            </select>
        </td>
        <td>
            <input type="button" value="Create" onclick="createEventType()"/>
        </td>
    </tr>
    <tr>
        <td>
            <input type="button" value="Edit" onclick="editEventType('act')"/>
        </td>
    </tr>
    <tr>
        <td>
            <input type="button" value="Deactivate" onclick="setEventTypeActive(false)" />
        </td>
    </tr>
</table>
<br />

<h3>Event types not in use (inactive)</h3>
<table class="no-pad-table">
    <tr>
        <td rowspan="2">
            <select id="inact" class="custom-select" size="6">
                @foreach (SelectListItem et in Model.InactiveEventTypes)
                {
                    <option value="@et.Value">@et.Text</option>
                }
            </select>
        </td>
        <td>
            <input type="button" value="Edit" onclick="editEventType('inact')"/>
        </td>
    </tr>
    <tr>
        <td>
            <input type="button" value="Activate" onclick="setEventTypeActive(true)" />
        </td>
    </tr>
</table>