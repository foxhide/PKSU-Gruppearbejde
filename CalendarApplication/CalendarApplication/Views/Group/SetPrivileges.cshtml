@model CalendarApplication.Models.Group.GroupPrivilegesModel

@{
    ViewBag.Title = "SetPrivileges";
}
<script src="@Url.Content("~/Scripts/create-eventtype.js")" type="text/javascript"></script>

<h2>@Model.Name</h2>

<h3 style="color:red">@TempData["errorMsg"]</h3>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.HiddenFor(model => Model.ID)
    @Html.HiddenFor(model => Model.Name)
    <style>
        #fields td {padding:0;padding-left:5px;padding-right:5px}
        #fields tr {padding:0;}
        #fields th {padding:0;}
    </style>
    
    <table>
        <tr>
            <td>
                <fieldset>
                    <legend>@Html.LabelFor(model => Model.EventTypes)</legend>
                    @Html.ListEditorFor(model => Model.EventTypes, "Allowed", "All event types")
                </fieldset>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save Changes"/>
            </td>
        </tr>
    </table>   
}