@using CalendarApplication.Models.User;

@if (Request.IsAuthenticated) {
    <text>You are logged in as: @CurrentUserModel.GetCurrent().UserName
            | @Html.ActionLink("Log out", "Logout", "Account", null, null)</text>
} else {
    <text>@Html.ActionLink("Register", "Register", "Account", null, null) |
    @Html.ActionLink("Log in", "Login", "Account", null, null)</text>
}

