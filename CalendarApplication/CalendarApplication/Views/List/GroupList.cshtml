@model CalendarApplication.Models.Group.GroupListModel

@{
    ViewBag.Title = "GroupList";
}

<h2>Groups</h2>


@using (Html.BeginForm())
{
    using(Html.BeginListView("Groups", new string[] { "Name" , "Open Group" }))
                {
                    for (int i = 0; i < Model.GroupList.Count; i++)
                    {
                        <tr>
                            <td>@Html.ActionLink(Model.GroupList[i].Name, "ViewGroup", "Group", new { groupId = Model.GroupList[i].ID }, null)</td>
                            <td><div class="@(Model.GroupList[i].Open ? "tick" : "red_cross")" style="width:26px;height:26px;margin:auto"></div></td>
                        </tr>
                    }
                }
}